---
import Avatar from "./avatar/avatar.astro";
---

<header id="nav" class="fixed w-full h-[4em] bg-white">
  <button class="nav-hamburger left-4 lg:left-[10%]">
    <span></span>
    <span></span>
    <span></span>
    <span></span>
  </button>

  <nav class="menu">
    <ul>
      <li><a>Projects</a></li>
      <li><a>Projects</a></li>
      <li><a>Projects</a></li>
      <li><a>Projects</a></li>
      <li><a>Projects</a></li>
    </ul>
  </nav>

  <div class="avatar right-4 lg:right-[10%]">
    <Avatar />
  </div>
</header>

<script>
  import { toggleScroll } from "@/lib/functions";

  const nav = document.querySelector("#nav");
  const toggleBtn = document.querySelector(".nav-hamburger");

  toggleBtn!.addEventListener("click", () => {
    nav!.toggleAttribute("active");
    toggleScroll();
  });
</script>

<style>
  .avatar {
    position: absolute;
    top: calc(50% - 3em / 2);
  }

  .nav-hamburger {
    margin: 0;
    width: 2em;
    height: 1.5em;
    position: absolute;
    z-index: 100000;
    top: calc(50% - 1.5em / 2);
    /* left: 10%; */
    transform: rotate(0deg);
    transition: all 0.35s cubic-bezier(0.215, 0.61, 0.355, 1);
  }

  .nav-hamburger span {
    left: 0;
    width: 100%;
    height: 2px;
    display: block;
    position: absolute;
    background: black;
    border-radius: 10px;
  }

  .nav-hamburger span:nth-child(1) {
    top: 0;
    width: 100%;
  }
  .nav-hamburger span:nth-child(2),
  .nav-hamburger span:nth-child(3) {
    top: 10px;
    width: 35%;
  }

  .nav-hamburger span:nth-child(4) {
    top: 20px;
    width: 65%;
  }

  #nav[active] .nav-hamburger {
    transform: rotate(180deg);
  }
  #nav[active] .nav-hamburger span {
    background: white;
  }

  #nav[active] .nav-hamburger span:nth-child(1) {
    top: 2em;
    width: 0;
  }

  #nav[active] .nav-hamburger span:nth-child(2) {
    width: 100%;
    transform: rotate(45deg);
  }

  #nav[active] .nav-hamburger span:nth-child(3) {
    width: 100%;
    transform: rotate(-45deg);
  }

  #nav[active] .nav-hamburger span:nth-child(4) {
    top: 18px;
    width: 0;
    left: 50%;
  }

  .menu {
    background: black;
    position: fixed;
    height: 100%;
    width: 100%;
    left: -100%;
    opacity: 0;
    top: 0;
    color: white;
    padding: 15% 10%;
    transition: all 0.35s cubic-bezier(0.215, 0.61, 0.355, 1);
    z-index: 9999;
    display: grid;
    grid-template-areas: "nav photo";
  }

  .menu ul {
    grid-area: nav;
    width: 100%;
  }

  .menu img {
    grid-area: photo;
    width: 100%;
    object-fit: cover;
  }

  .menu a {
    display: block;
    font-size: 60px;
    text-transform: uppercase;
    opacity: 0.4;
    cursor: pointer;
    transition: all 0.35s cubic-bezier(0.215, 0.61, 0.355, 1);
  }

  #nav[active] .menu {
    left: 0;
    opacity: 1;
  }

  #nav[active] .menu a:hover {
    opacity: 1;
    /* padding-left: 20px; */
  }
</style>
