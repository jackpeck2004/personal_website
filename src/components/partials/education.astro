---
import { type Education } from "@/lib/types";
import { education } from "@/lib/contents";
import { ListEducation } from "./education-list";
import { Calendar, MapPin } from "lucide-astro";
---

<!-- <ListEducation education={education} /> -->
<div class="grid grid-cols-2 gap-8">
  <div>
    <h3>Academics</h3>
    {
      education.map(({ title, institution, startDate, endDate, type }) => {
        if (type !== null && type === "academic")
          return (
            <div class="w-full border border-grary-200 rounded my-4 min-h-32 flex py-4 px-4">
              <img
                src={institution.logoUrl}
                class="w-24 h-24 object-contain"
                style={
                  !!institution.bg ? { backgroundColor: institution.bg } : {}
                }
              />
              <div class="ml-8">
                <h3
                  class={`font-bold text-3xl`}
                  style={{ color: institution.color }}
                >
                  {title}
                </h3>
                <h4
                  class={`text-2xl font-bold`}
                  style={{ color: institution.color }}
                >
                  <a href={institution.url} target="_blank">
                    {institution.name}
                  </a>
                </h4>
                <span class="flex my-2 items-center">
                  {/*<MapPin class="w-5 h-5 mr-1" />
                   */}
                  {institution.location}
                </span>
                <span class="flex my-2 items-center">
                  {startDate} - {endDate}
                </span>
              </div>
            </div>
          );
      })
    }
  </div>
<div >
    <h3>Extra-academic</h3>
    <div class="grid grid-cols-2 gap-x-2 gap-y-0">
    {
      education.map(({ title, institution, startDate, endDate, type }) => {
        if (type !== "academic")
          return (
            <div class="w-full border border-grary-200 rounded my-2 flex flex-col justify-between py-4 px-4">
              <div class="flex items-center">
              <!-- <img -->
              <!--   src={institution.logoUrl} -->
              <!--   class="w-16 h-16 object-contain mr-4" -->
              <!--   style={ -->
              <!--     !!institution.bg ? { backgroundColor: institution.bg } : {} -->
              <!--   } -->
              <!-- /> -->
                <div>
                <h3
                  class={`font-bold text-xl`}
                  style={{ color: institution.color }}
                >
                  {title}
                </h3>
<h4
                  class={`text-md font-bold`}
                  style={{ color: institution.color }}
                >
                  <a href={institution.url} target="_blank">
                    {institution.name}
                  </a>
                </h4>
                </div>
              </div>
              <div>
                <span class="flex my-2 items-center">
                  <MapPin class="w-5 h-5 mr-1" />
                  {institution.location}
                </span>
                <span class="flex my-2 items-center">
                  <Calendar class="w-5 h-5 mr-1" />
                  {startDate} {endDate && `- ${endDate}`}
                </span>
              </div>
            </div>
          );
      })
    }
    </div>
  </div>
</div>
